#!/usr/bin/env sh

case $1 in
	just-pull)
		git --git-dir="$HOME"/.config/biual-git/ --work-tree="$HOME" pull;;

	pull)
		git --git-dir="$HOME"/.config/biual-git/ --work-tree="$HOME" pull && git --git-dir="$HOME"/.config/biual-git/ --work-tree="$HOME" update-index --assume-unchanged ~/LICENSE ~/README.md && rm -rf ~/LICENSE ~/README.md && git --git-dir="$HOME"/.config/biual-git/ --work-tree="$HOME" submodule update --recursive;;
	*)
		git --git-dir="$HOME"/.config/biual-git/ --work-tree="$HOME" "$@";;
esac
